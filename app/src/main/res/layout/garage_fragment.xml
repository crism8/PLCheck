<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/garageLightsImageButton"
        android:src="@drawable/light_bulb_color"
        android:contentDescription="@null"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1" />

    <ImageButton
        android:id="@+id/fanGarageImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/fan_color"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"/>

    <ImageButton
        android:id="@+id/garageAlarmImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:contentDescription="@null"
        android:src="@drawable/alarm_off" />

    <ImageButton
        android:id="@+id/garageDoorImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:contentDescription="@null"
        android:src="@drawable/garage_down" />

</GridLayout>