<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2">

    <ImageButton
        android:id="@+id/fountainLightsImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/light_bulb" />

    <ImageButton
        android:id="@+id/fountainImageButton"
        android:layout_width="wrap_content"
        android:layout_gravity="fill"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:contentDescription="@null"
        android:src="@drawable/fountain"
        android:layout_rowWeight="1"
        />


    <ImageButton
        android:id="@+id/wateringImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:contentDescription="@null"
        android:src="@drawable/hose"
        android:layout_rowWeight="1" />

    <ImageButton
        android:id="@+id/gatewayImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:contentDescription="@null"
        android:src="@drawable/gateway" />

</GridLayout>