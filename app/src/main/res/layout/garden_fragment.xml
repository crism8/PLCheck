<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fountainLightsImageButton"
        android:src="@drawable/light_bulb"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/fountainImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wateringImageButton"
        android:contentDescription="@null"
        android:src="@drawable/fountain" />


    <ImageButton
        android:id="@+id/wateringImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fountainLightsImageButton"
        android:contentDescription="@null"
        android:src="@drawable/hose" />

</RelativeLayout>