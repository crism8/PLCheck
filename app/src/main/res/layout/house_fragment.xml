<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LightsImageButton"
        android:src="@drawable/light_bulb"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/airConditionImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jalousieImageButton"
        android:contentDescription="@null"
        android:src="@drawable/fan" />

    <ImageButton
        android:id="@+id/jalousieImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LightsImageButton"
        android:contentDescription="@null"
        android:src="@drawable/jalousie_up" />

    <ImageView
        android:id="@+id/thermometerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:src="@drawable/thermometer" />

</RelativeLayout>